<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marius.myapplication.WelcomeFragment"
    style="@style/Main_Layout_Style"
    android:id="@+id/main_layout"
    android:visibility="visible">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            android:id="@+id/scroll_layout"
            android:layout_gravity="top"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="61dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:id="@+id/welcome_messages"
                    android:gravity="center_vertical"
                    style="@style/Main_Layout_Style">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Welcome traveler,"
                        android:id="@+id/welcomeMessageText"
                        android:layout_gravity="center_horizontal"
                        style="@style/Main_Layout_Style"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="what now ?"
                        android:id="@+id/wishText"
                        android:layout_gravity="center_horizontal"
                        style="@style/Main_Layout_Style"
                        android:textSize="20dp" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show my locations"
                    android:id="@+id/show_locations_button"
                    android:layout_gravity="center_horizontal|top" />

                <ImageView
                    android:layout_width="245dp"
                    android:layout_height="168dp"
                    android:id="@+id/locations_image_view"
                    android:src="@drawable/maps_positions" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find me a way out"
                    android:id="@+id/find_city_exit"
                    android:layout_gravity="center_horizontal|top" />

                <ImageView
                    android:layout_width="245dp"
                    android:layout_height="168dp"
                    android:id="@+id/find_route_image_view"
                    android:src="@drawable/maps_indications"
                    android:layout_marginTop="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save location coordinates "
                    android:id="@+id/saveLocationButtonInWelcomeFragment"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:layout_width="245dp"
                    android:layout_height="168dp"
                    android:id="@+id/map_mark_image_view"
                    android:src="@drawable/map_marking"
                    android:layout_marginTop="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    android:id="@+id/signOutButton"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:gravity="center" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
